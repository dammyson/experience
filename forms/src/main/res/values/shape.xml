<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Shape Appearance for circular components-->
    <style name="ShapeAppearance.Form.Circular" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!--Shape Appearance for cornered components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.Form.CorneredTopComponent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
        <item name="cornerSizeTopLeft">@dimen/grid_2</item>
        <item name="cornerSizeTopRight">@dimen/grid_2</item>
    </style>

    <!--Shape Appearance for small components like chips, buttons, text fields and FABs-->
    <style name="ShapeAppearance.Form.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/component_default_radius</item>
    </style>

    <!--Shape Appearance for medium components like cards, alert dialogs-->
    <style name="ShapeAppearance.Form.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
    </style>

    <!--Shape Appearance for large components like side and bottom navigation drawers-->
    <style name="ShapeAppearance.Form.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0px</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>

    <style name="ShapeAppearance.Form.MinimizedSheet" parent="ShapeAppearance.Form.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/minimized_sheet_top_left_radius</item>
    </style>

    <dimen name="small_component_top_left_radius">28dp</dimen>
    <dimen name="minimized_sheet_top_left_radius">48dp</dimen>
    <dimen name="component_default_radius">8dp</dimen>

</resources>
